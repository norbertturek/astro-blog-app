---
import { slugify, formatDate } from "../js/utils";

const { relatedPosts } = Astro.props;
---

{
  relatedPosts.map((post: Post) => (
    <div class="post bg-slate-100 p-5 md:p-8 rounded-xl mb-5 mt-5">
      <h3 class="text-xl font-semibold leading-snug tracking-tight mt-1">
        <a href={post.url}>{post.frontmatter.title}</a>
      </h3>
      <small class="text-gray-400">
        <a href={`/author/${slugify(post.frontmatter.author)}/`}>
          {post.frontmatter.author}
        </a>{" "}
        â€¢ {formatDate(post.frontmatter.date)}
      </small>
    </div>
  ))
}
